{% extends 'base.html.twig' %}
{% block title %}Annonces{% endblock %}
{% block body %}

    <h1>Annonces</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-md-4">
                {{ form_start(form) }}
                <div class="text-center">
                    <div class="panel panel-default">
                        <div class="panel-heading">Filtre</div>
                        <div class="panel-body">{{ form_widget(form) }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

    <table>
        <tr>
            <td>Titre</td>
            <td>Pi√®ces</td>
            <td>Prix</td>
        </tr>
        {% for annonce in annonces %}

            <tr>
                <td>
                    <a href="{{ path('annonce_details', {'id': annonce.id}) }}">{{ annonce.titre }}</a>
                </td>
                <td>{{ annonce.nbPiece }}</td>
                <td>{{ annonce.prix }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}